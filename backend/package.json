{
  "name": "unholy-souls-mc-backend",
  "version": "1.0.0",
  "description": "Backend API server for Unholy Souls MC website",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "migrate": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "seed": "knex seed:run",
